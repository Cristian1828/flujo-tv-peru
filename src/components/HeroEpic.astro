<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20" id="inicio">
  <!-- Rotating Background Images -->
  <div class="absolute inset-0 z-0">
    <div id="hero-bg-1" class="hero-bg absolute inset-0 transition-opacity duration-1000 opacity-100">
      <img src="/hero-bg-1.png" alt="" class="w-full h-full object-cover" />
    </div>
    <div id="hero-bg-2" class="hero-bg absolute inset-0 transition-opacity duration-1000 opacity-0">
      <img src="/hero-bg-2.png" alt="" class="w-full h-full object-cover" />
    </div>
    <div id="hero-bg-3" class="hero-bg absolute inset-0 transition-opacity duration-1000 opacity-0">
      <img src="/hero-bg-3.png" alt="" class="w-full h-full object-cover" />
    </div>
    <!-- Overlays -->
    <div class="absolute inset-0 bg-gradient-to-b from-dark/80 via-dark/60 to-dark z-10"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-dark via-transparent to-dark z-10"></div>
  </div>

  <!-- Floating Particles -->
  <div class="absolute inset-0 z-20">
    <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-orange rounded-full animate-float opacity-60"></div>
    <div class="absolute top-1/3 right-1/3 w-1 h-1 bg-cyan rounded-full animate-float opacity-40" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-1/3 left-1/3 w-1.5 h-1.5 bg-orange rounded-full animate-float opacity-50" style="animation-delay: 2s;"></div>
  </div>

  <div class="container mx-auto px-4 relative z-30 text-center">
    <div class="max-w-5xl mx-auto animate-slide-up">
      <div class="inline-flex items-center gap-2 bg-orange/10 border border-orange/30 rounded-full px-4 py-2 mb-8 backdrop-blur-sm">
        <span class="w-2 h-2 bg-orange rounded-full animate-pulse"></span>
        <span class="text-orange text-sm font-bold tracking-wider uppercase">Magis ahora es FLUJO TV</span>
      </div>

      <!-- Main Title with Rotating Keyword -->
      <h1 class="font-display font-black text-4xl md:text-6xl lg:text-7xl mb-6 leading-[1.1]">
        <span class="text-orange">FLUJO TV</span>
        <br class="hidden md:block" />
        <span class="text-white text-2xl md:text-4xl lg:text-5xl">La plataforma más </span>
        <span id="rotating-keyword" class="text-orange text-2xl md:text-4xl lg:text-5xl transition-all duration-300">COMPLETA</span>
        <br />
        <span class="text-white text-2xl md:text-4xl lg:text-5xl">de entretenimiento</span>
      </h1>

      <!-- Subtitle -->
      <p class="text-gray-300 text-lg md:text-xl mb-10 max-w-3xl mx-auto leading-relaxed">
        Más de <span class="text-orange font-bold">3,000 canales en vivo</span>, películas de estreno, series exclusivas y deportes en <span class="text-orange font-bold">4K Ultra HD</span>. Sin contratos. Sin límites.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16">
        <a 
          href="https://wa.me/51914326729?text=Hola,%20quiero%20información%20sobre%20Flujo%20TV%20Perú"
          target="_blank"
          class="group relative px-8 py-4 bg-gradient-orange text-dark font-bold rounded-xl overflow-hidden hover:scale-105 transition-all duration-300 shadow-lg shadow-orange/30 hover:shadow-orange/50"
        >
          <span class="relative z-10">EMPEZAR AHORA</span>
          <div class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
        </a>
        
        <a 
          href="#planes"
          class="px-8 py-4 bg-white/10 backdrop-blur-sm text-white font-bold rounded-xl hover:bg-white/20 transition-all duration-300"
        >
          Ver Planes
        </a>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-display font-black text-orange mb-2">3K+</div>
          <div class="text-sm text-gray-400 uppercase tracking-wider">Canales</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-display font-black text-orange mb-2">15K+</div>
          <div class="text-sm text-gray-400 uppercase tracking-wider">Películas</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-display font-black text-orange mb-2">5K+</div>
          <div class="text-sm text-gray-400 uppercase tracking-wider">Series</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-display font-black text-orange mb-2">4K</div>
          <div class="text-sm text-gray-400 uppercase tracking-wider">Ultra HD</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Gradient -->
  <div class="absolute bottom-0 inset-x-0 h-32 bg-gradient-to-t from-dark to-transparent pointer-events-none z-40"></div>
</section>

<script>
  // Short rotating keywords
  const keywords = ["COMPLETA", "PREMIUM", "ECONÓMICA", "ESTABLE", "ACCESIBLE"];
  let keywordIndex = 0;
  const keywordElement = document.getElementById('rotating-keyword');
  
  function rotateKeyword() {
    if (keywordElement) {
      keywordElement.style.opacity = '0';
      keywordElement.style.transform = 'translateY(-10px)';
      
      setTimeout(() => {
        keywordIndex = (keywordIndex + 1) % keywords.length;
        keywordElement.textContent = keywords[keywordIndex];
        keywordElement.style.opacity = '1';
        keywordElement.style.transform = 'translateY(0)';
      }, 300);
    }
  }
  
  // Background image rotation
  let currentBgIndex = 1;
  const totalBgs = 3;
  
  function rotateBg() {
    // Hide all backgrounds
    document.querySelectorAll('.hero-bg').forEach(bg => {
      (bg as HTMLElement).style.opacity = '0';
    });
    
    // Move to next
    currentBgIndex = (currentBgIndex % totalBgs) + 1;
    
    // Show next background
    const nextBg = document.getElementById(`hero-bg-${currentBgIndex}`);
    if (nextBg) {
      nextBg.style.opacity = '1';
    }
  }
  
  // Initialize
  if (keywordElement) {
    keywordElement.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
  }
  
  // Start rotations
  setInterval(rotateKeyword, 2500);
  setInterval(rotateBg, 5000);
</script>
